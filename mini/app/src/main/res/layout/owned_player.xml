<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="visible">

    <EditText
        android:id="@+id/playername"
        android:layout_width="247dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:hint="name"
        android:layout_alignParentLeft="true" />

    <EditText
        android:id="@+id/playerage"
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:hint="age"
        android:text="AGE:"
        android:textSize="18dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/playerimage"
        android:layout_width="317dp"
        android:layout_height="138dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="37dp"
        android:layout_marginRight="37dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="49dp" />

    <EditText
        android:id="@+id/playermatches"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/playerruns"
        android:layout_alignParentStart="true"
        android:hint="matches"
        android:layout_alignParentLeft="true" />

    <EditText
        android:id="@+id/playerruns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:hint="runs"
        android:layout_alignParentLeft="true" />

    <EditText
        android:id="@+id/playerbatSR"
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/playerruns"
        android:hint="batting SR"
        android:layout_alignParentRight="true" />

    <EditText
        android:id="@+id/playerbatavg"
        android:layout_width="193dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/playerruns"
        android:hint="batting avg"
        android:layout_alignParentLeft="true" />

    <EditText
        android:id="@+id/playerwickets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/playerbowavg"
        android:hint="wickets"
        android:layout_alignParentLeft="true" />

    <EditText
        android:id="@+id/playerbowSR"
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/playerbatSR"
        android:hint="bowling SR"
        android:layout_alignParentRight="true" />

    <EditText
        android:id="@+id/playerbowavg"
        android:layout_width="193dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/playerbatSR"
        android:hint="bowling avg"
        android:layout_alignParentLeft="true" />

    <EditText
        android:id="@+id/playerprice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/playerwickets"
        android:hint="base price"
        android:layout_alignParentLeft="true" />





</RelativeLayout>
